@model BikoretSeret.Models.Movie
<form action="/Movies/Filter" method="post">
    <select asp-for="category">
        <option value="action"> Action</option>
        <option value="comedy"> Comedy</option>
        <option value="romanti"> Romanti</option>
    </select>
    <input type="submit" value="Submit">
</form>

@if (ViewBag.movies != null)
{
    <div class="title-poster">
        @for (int i = 0; i < ViewBag.movies.Count; i++)
        {
            <div class="movie-card">
                <div>
                    <a class="nav-link text-dark" asp-area="" asp-controller="movies" asp-action="moviePage" asp-route-id="@ViewBag.movies[i].ID"></a>
                </div>

                <h1>@ViewBag.movies[i].name</h1>

                <img src="@ViewBag.ImageDataUrl[i]" />
            </div>
        }
    </div>
}


