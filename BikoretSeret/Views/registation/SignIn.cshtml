@model BikoretSeret.Models.TbUser
<form action="/registation/LogIn" method="post">
    <div>
        <img class="imgcontainer" src="~/images/avatar-male-1.png" />
    </div>

    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" asp-for="UserName" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" asp-for="Password" required>

        <button type="submit">Login</button>
       
    </div>

</form>
@if(TempData.ContainsKey("message"))
{
    <h1>>@TempData["message"]</h1>
}